<?xml version="1.0" encoding="UTF-8"?>
<frame id="VDGivePricesframe" size="400,300"  MinimumSize="400,300" resizable="true" title="Tombola - výdej cen" 
        defaultCloseOperation="JFrame.DISPOSE_ON_CLOSE">       
        
	   <panel layout="GridBagLayout" background="WHITE" border="EmptyBorder(10,10,10,10)">
			<textarea editable="false" WrapStyleWord="true" font="ARIAL-BOLD-16"  
	            text="Výdej cen" HorizontalAlignment="SwingConstants.CENTER"  opaque="false">
	            <gridbagconstraints anchor="GridBagConstraints.CENTER" insets="(5,5,5,5)" 
	                gridx="0" gridy="0" gridwidth="1" gridheight="1"  fill="GridBagConstraints.HORIZONTAL" />        
	        </textarea>
	        <textfield text="" id="TicketNumber" toolTipText="celé číslo" >
				<gridbagconstraints insets="(5,5,5,5)"
            		gridx="0" gridy="1" gridwidth="1" gridheight="1" weightx="0.4"  fill="GridBagConstraints.HORIZONTAL"/>                      
   			</textfield>
			<button text="OK" id="ConfirmButton" action="Confirm">
	            <gridbagconstraints insets="(5,5,5,5)" fill="GridBagConstraints.HORIZONTAL" anchor="GridBagConstraints.CENTER"
	                gridx="1" gridy="1" gridwidth="1" gridheight="1"/>               
	        </button> 

	        <textarea editable="false" WrapStyleWord="true" font="ARIAL-BOLD-30" id="PrizeLabel" LineWrap="true"
	            text="" HorizontalAlignment="SwingConstants.CENTER"  opaque="false">
	            <gridbagconstraints anchor="GridBagConstraints.CENTER" insets="(5,5,5,5)" 
	                gridx="0" gridy="2" gridwidth="2" gridheight="1" weightx="0.6" weighty="0.6" fill="GridBagConstraints.HORIZONTAL" />        
	        </textarea>

		</panel>         

</frame>    